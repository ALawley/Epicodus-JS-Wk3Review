{{#if editQuestionForm}}
<h4>Update question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question Text:</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'editQuestion' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editQuestionForm'}}>Update Question</button>
{{/if}}
